<div class="row">
  <div class="col-lg-4 col-lg-offset-4 well">
    <h3 class="text-center"><%= t "devise.invitations.new.header" %></h3>
    <br>
    <%= form_for resource, as: resource_name, url: invitation_path(resource_name), html: { method: :post } do |f| %>
      <% if resource.errors.any? %>
        <div class="alert alert-danger alert-dismissable">
          <%= resource.errors.full_messages.first %>
          <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
        </div>
      <% end %>
      <% resource.class.invite_key_fields.each do |field| -%>
        <div class="form-group">
          <%= f.label field %>
          <%= f.text_field field, class: 'form-control', placeholder: field.capitalize %>
        </div>
      <% end -%>
      <div class="actions">
        <%= f.submit t("devise.invitations.new.submit_button"), class: 'btn btn-success' %>
      </div>
    <% end %>
    <br>
    <%= render 'devise/shared/links' %>
  </div>
</div>
